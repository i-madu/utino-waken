<div class="container">
  <div class="row">
      <div class="col-md-3 shadow-sm mt-5">
        <%= link_to "新規投稿する",new_post_path %>
      </div>

      <div class="col-md-9">
        <div class="row">
          <% @posts.each do |post| %>
            <div class="card shadow-sm m-3 mt-5 col-md-5">
              <div class="card-header float-end">
                <p class="d-inline">image</p>
                <p class="d-inline">name</p>
              </div>
            <% if post.post_image.attached? %>
            　<%= link_to post_path(post) do %>
                <%= image_tag post.post_image, class:"card-img-top post-image" %>
            <% end %>
              <div class="card-body">
                <p class="card-text text-wrap"><%= post.post %></p>
              </div>
              <% end %>
            </div>
          <% end %>

        </div>
      </div>
  </div>
</div>