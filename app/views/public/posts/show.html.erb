<div class="container">
  <div class="row">
    <div class="col-md-2 shadow-sm mt-5">
      <%= link_to "新規投稿する",new_post_path %>
    </div>


    <div class="card mb-3 col-md-6 shadow-sm mt-5">
      <%= image_tag @post.post_image, class:"card-img-top rounded mx-auto d-block post-image-show" %>
      <div class="card-header">
        <p class="d-inline">image</p>
        <p class="d-inline"><%= @post.customer.login_name %></p>
      </div>
      <div class="card-body">
        <p class="card-text my-3"><%= @post.post %></p>
      </div>
      <div class="card-footer">
        <%= render "layouts/favorite", post: @post  %>
        <p class="card-text d-inline"><small class="text-muted"><%= @post.created_at.strftime("%Y/%m/%d") %></small></p>
        <%= link_to "編集する",edit_post_path %>
      </div>
    </div>

    <!--コメント-->
    <div class="col-md-3 card overflow-scroll mt-5 mr-1">
      <% @post.comments.each do |post| %>
      <div class="card-header">
        <p class="d-inline">image</p>
        <p class="d-inline"><%= post.login_name %></p>
      </div>
      <div class="card-body">
        <div class="card-text"><%= post.comment %></div>
      </div>
      <div class="card-footer">
        <% if post.customer.id == current_customer.id %>
          <%= link_to "削除する",post_comments_path, method: :delete,  class:"card-text d-inline" %>
        <% end %>
        <p class="card-text d-inline"><small class="text-muted"><%= post.created_at.strftime("%Y/%m/%d") %></small></p>
      </div>
      <% end %>

      <div class="row">
        <div class="col-12 ">
        <%= form_with model:[@post, @comment], local: true do |f| %>
          <%= f.text_area :comment, placeholder: "気になった投稿にコメントしてみましょう!" %><br>
          <%= f.submit "投稿" %>
        </div>
        <% end %>
      </div>


    </div>

  </div>
</div>