<div class="container">
  <div class="row">
    <div class="col-md-3 shadow-sm mt-5">
    </div>


    <div class="card mb-3 col-md-8 shadow-sm mt-5">
      <%= image_tag @post.post_image, class:"card-img-top rounded mx-auto d-block post-image-show" %>
      <div class="card-body">
        <p class="card-text"><%= @post.post %></p>
        <p class="card-text"><small class="text-muted"><%= @post.created_at.strftime("%Y/%m/%d") %></small></p>
      </div>
    </div>

  </div>
</div>