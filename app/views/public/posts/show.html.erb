<div class="container">
  <div class="row">
    <%= render "public/customers/info", customer: @customer %>


    <div class="card mb-3 col-md-6 shadow-sm mt-5 m-3">
      <%= image_tag @post.post_image, class:"card-img-top rounded mx-auto d-block post-image-show" %>
      <div class="card-header">
        <p class="d-inline">image</p>
        <p class="d-inline"><%= @post.customer.login_name %></p>
      </div>
      <div class="card-body">
        <p class="card-text my-3"><%= @post.post %></p>
      </div>
      <div class="card-footer">
        <p id="favorite-show"><%= render "public/favorites/favorite", post: @post  %></p>
        <p class="card-text d-inline"><small class="text-muted"><%= @post.created_at.strftime("%Y/%m/%d") %></small></p>
        <%= link_to "編集する",edit_post_path %>
      </div>
    </div>

    <!--コメント-->
    <div class="col-md-3 mt-5 mr-1">
      <div class="row">
        <div class="col-12 ">
        <%= form_with model:[@post, @comment], local: true do |f| %>
          <%= f.text_area :comment, placeholder: "気になった投稿にコメントしてみましょう!",size:"25x5" %><br>
          <%= f.submit "投稿" %>
        </div>
        <% end %>
      </div>


      <div class="row sidebox">
      <% @post.comments.each do |comment| %>
        <div class="col-md-12 card" data-spy="affix">
          <div class="card-header">
            <p class="d-inline">image</p>
            <p class="d-inline"><%= comment.customer.login_name %></p>
          </div>
          <div class="card-body">
            <div class="card-text"><%= comment.comment %></div>
          </div>
          <div class="card-footer">
            <% if comment.customer == current_customer %>
              <%= link_to "削除する",post_comment_path(@post, comment), method: :delete, class:"card-text d-inline" %>
            <% end %>
            <p class="card-text d-inline"><small class="text-muted"><%= comment.created_at.strftime("%Y/%m/%d") %></small></p>
          </div>
        </div>
        <% end %>
      </div>



    </div>

  </div>
</div>