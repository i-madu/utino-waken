<div class="container">
  <div class="row">
    <%= render "public/customers/info", customer: @customer %>
    <table class="col-md-8 table  shadow-sm m-3 mt-5">
      <% @customers.each do |customer| %>
      <tr>
        <th><%= image_tag customer.get_profile_image(50,50) %></th>
        <th><%= link_to customer.login_name, customer_path(customer) %></th>
        <th class="follow_<%= @customer.id %>"><%= render "public/relationships/follow", customer: @customer %></th>
      </tr>
      <% end %>
    </table>
  </div>
</div>