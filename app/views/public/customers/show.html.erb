<div class="container">
  <div class="row">
      <%= render "info", customer: @customer %>

    <div class="col-md-9">
      <div class="row">
        <% @posts.each do |post| %>
          <div class="card shadow-sm m-3 mt-5 col-md-5">
            <div class="card-header float-end">
              <%= image_tag post.customer.get_profile_image(50,50), class:"img-fluid d-inline" %>
              <p class="d-inline"><%= post.customer.login_name %></p>
            </div>
          <% if post.post_image.attached? %>
          ã€€<%= link_to post_path(post) do %>
              <%= image_tag post.post_image, class:"card-img-top post-image" %>
          <% end %>
            <div class="card-body">
              <p class="card-text text-wrap"><%= post.post %></p>
            </div>
            <div class="card-footer">
              <p id="favorite" class="d-inline"><%= render "public/favorites/favorite", post: post  %></p>
              <p class="card-text d-inline"><small class="text-muted"><%= post.created_at.strftime("%Y/%m/%d") %></small></p>
            </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>