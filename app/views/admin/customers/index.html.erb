<div class="container">
  <div class="row mx-auto">
      <h3 class="col-md-4 my-3 offset-md-4">会員一覧</h3>
  </div>

  <div class="row">
    <table class="table">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>ログイン名</th>
        <th>ステータス</th>
      </tr>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer) do %>
            <%= customer.name %>
          <% end %>
          </td>
        <td>
          <%= link_to admin_posts_path(customer) do %>
            <%= customer.login_name %>
          <% end %>
        </td>
        <td><%= customer.login_name %></td>
        <td>ステータス</td>
      </tr>
      <% end %>
    </table>
  </div>