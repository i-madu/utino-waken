<div class="container">
  <div class="row mx-auto">
      <h3 class="col-md-4 my-5">会員詳細</h3>
  </div>

  <div class="row">
    <table class="table col-md-8 mt-3 mx-auto">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.name %>
          </td>
        </tr>
        <tr>
          <th>ログイン名</th>
          <td>
            <%= link_to admin_customer_posts_path(@customer) do %>
              <%= @customer.login_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
            <td><%= @customer.email %></td>
        </tr>

        <tr>
          <th>ステータス</th>
          <td>有効/無効</td>
        </tr>
    </table>

  </div>
  <div class="row-8 offset-md-1 mt-3">
    <div class="col-md-3 mx-auto">
      <%= link_to edit_admin_customer_path do %>
        <button class="btn btn-success mx-auto">編集</button>
      <% end %>
    </div>
  </div>
</div>