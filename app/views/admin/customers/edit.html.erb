<div class="container bg-light">
  <div class="row">
      <h5 class="col-md-3 offset-2 my-5 bg-light text-center">会員情報編集</h5>
  </div>
  <div class="row">
    <div class="col-md-10 offset-2">
      <%= form_with model: @customer,url:admin_customer_path,method: :patch, local:true do |f| %>
      <div class="from-group">
        <%= f.label :profile_image, "プロフィール画像",class:"col-md-3" %>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="from-group mt-3 mb-4">
        <%= f.label :name,"氏名",class:"align-top col-md-3" %>
        <%= f.text_field :name %>
      </div>
      <div class="from-group mt-3 mb-4">
        <%= f.label :login_name,"ログイン名",class:"col-md-3" %>
        <%= f.text_field :login_name %>
      </div>
      <div class="from-group mt-3 mb-4">
        <%= f.label :introduction,"自己紹介",class:"align-top col-md-3" %>
        <%= f.text_area :introduction, placeholder:"他の会員に自己紹介してみましょう。",size:"35x10" %>
      </div>
      <div class="form-group mt-3 mb-4">
        <%= f.label :is_deleted, "ステータス",class:"col-md-3" %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted,"有効" %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "無効" %>
      </div>

      <div class="from-group offset-md-5 offset-sm-3 offset-lg-3">
        <%= f.submit "変更する",class:"btn btn-info col-md-2 col-sm-3 col-lg-3" %>
      </div>
      <% end %>
    </div>
  </div>
</div>