<div class="container">
  <div class="row">



        <div class="row">
          <% @posts.each do |post| %>
            <div class="card shadow-sm m-3 mt-5 col-md-3 mx-auto">
              <div class="card-header float-end">
                <%= link_to admin_customer_path(post) do %>
                  <p class="d-inline">image</p>
                <% end %>
                <%= link_to admin_customer_path(post) do %>
                  <p class="d-inline"><%= post.customer.login_name %></p>
                <% end %>
              </div>
            <% if post.post_image.attached? %>
            　<%= link_to admin_post_path(post) do %>
                <%= image_tag post.post_image, class:"card-img-top post-image img-fluid" %>
            <% end %>
              <div class="card-body">
                <p class="card-text overflow-hidden post-index"><%= post.post %></p>

                <!--タグ表示-->
                <p class="card-text overflow-hidden post-index"><i class="fas fa-tag"></i><%= post.tags.map(&:name).join(',') %></p>

              </div>
              <div class="card-footer">
                <p id="favorite">♥<%= post.favorites.count  %></p>
                <p class="card-text d-inline"><small class="text-muted"><%= post.created_at.strftime("%Y/%m/%d") %></small></p>
              </div>
              <% end %>

            </div>
          <% end %>

        </div>

  </div>
</div>