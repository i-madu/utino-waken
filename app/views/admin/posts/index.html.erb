<div class="container">
  <div class="row">
    <%= render "admin/customers/info", customer: @customer %>
    <div class="col-md-9">
      <div class="row">
      <% @posts.each do |post| %>
        <div class="card shadow-sm m-3 mt-5 col-md-5">
          <% if post.post_image.attached? %>
          　<%= link_to admin_customer_post_path(post.customer, post.id) do %>
              <%= image_tag post.post_image, class:"card-img-top post-image img-fluid" %>
            <% end %>
          <% end %>
          <div class="card-body">
            <p class="card-text overflow-hidden post-index"><%= post.post %></p>
            <!--タグ表示-->
            <p class="card-text post-index">
              <% post.tags.each do |tag| %>
              <i class="fas fa-tag"></i>
                <%=  tag.name %>
              <% end %>
          </div>
          <div class="card-footer">
            <p class="d-inline">♥<%= post.favorites.count %></p>|
            <P class="d-inline"><i class="fa fa-comment-dots"></i><%= post.comments.count %></P>|
            <p class="card-text d-inline"><i class="fa fa-calendar"></i><small class="text-muted"><%= post.created_at.strftime("%Y/%m/%d") %></small></p>|
          </div>
        </div>
      <% end %>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>