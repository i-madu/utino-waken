<div class="container">
  <div class="row">
    <%= render "admin/customers/info", customer: @customer %>

    <div class="card mb-3 col-md-8 shadow-sm mt-5 m-3">
      <%= image_tag @post.post_image, class:"card-img-top rounded mx-auto d-block post-image-show" %>
      <div class="card-header">
        <%= image_tag @post.customer.get_profile_image(50,50), class:"img-fluid d-inline" %>
        <p class="d-inline"><%= @post.customer.login_name %></p>
      </div>
      <div class="card-body">
        <p class="card-text my-3"><%= safe_join(@post.post.split("\n"),tag(:br)) %></p>
      
        <% @post_tags.each do |tag| %>
          <p class="card-text"><i class="fas fa-tag"></i><%= tag.name %></p>
        <% end %>
      </div>
      <div class="card-footer">
        <p class="d-inline">♥<%= @post.favorites.count %></p>
        <p class="card-text d-inline"><small class="text-muted"><%= @post.created_at.strftime("%Y/%m/%d") %></small></p>
        <%= link_to "削除",admin_customer_post_path(@post),method: :delete, "data-confirm" => "本当に削除しますか？", class:"d-inline" %>
      </div>
    </div>
  </div>
  <!--コメント-->
  <div class="row mt-5 offset-3">
    <h5>コメント</h5>
  </div>
  <div class="row mt-5 offset-3">
    <div class="col-11" id="comment-list">
      <%= render "admin/comments/comment", post: @post %>
    </div>
  </div>
</div>