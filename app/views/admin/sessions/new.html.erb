<div class="container bg-color">
  <div class="row mx-auto">
      <h3 class="col-md-3 my-5 offset-md-2 text-center">管理者ログイン</h3>
  </div>

  <div class="row mt-5 mx-auto">
    <div class="col-md-8 mt-3 offset-md-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",size:"25" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password",size:"25" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保持する" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン",class:"btn btn-primary offset-md-1 mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render "admin/shared/links" %>
</div>
