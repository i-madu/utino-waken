<div class="container">
  <div class="row mx-auto">
      <h3 class="col-md-4 my-3 offset-md-4">管理者ログイン</h3>
  </div>

  <div class="row mt-3 mx-auto">
    <div class="col-md-8 mt-3 offset-md-3">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン状態を保持する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-primary offset-md-3" %>
  </div>
<% end %>
</div>
  </div>

<%= render "admin/shared/links" %>
